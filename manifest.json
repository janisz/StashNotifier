{
  "name": "Stash Notifier",
  "version": "0.1",
  "description": "Displays the number of unreviewed pull requests. You can also click the button to open Stash.",
  "icons": {
    "64": "64.png",
    "128": "128.png"
  },
  "permissions": [
    "notifications",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "64.png"
  },

// crbug.com/134315
  "web_accessible_resources": [
    "64.png"
  ]
}
