{
  "name": "Notification Demo",
  "version": "1.1",
  "description": "Shows off desktop notifications, which are \"toast\" windows that pop up on the desktop.",
  "icons": {
    "64": "64.png",
    "128": "128.png"
  },
  "permissions": [
    "notifications",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "64.png"
  },

// crbug.com/134315
  "web_accessible_resources": [
    "64.png"
  ]
}
